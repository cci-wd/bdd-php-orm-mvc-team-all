{% form_theme form 'form/form_errors.html.twig' %}

{{ form_start(form) }}

<header class="page-header">

	<div class="container page-name">
		<h1 class="text-center">{{ form_title }}</h1>
		<p class="lead text-center">{{ form_desc }}</p>
	</div>

	<div class="container">

		<div class="row">
			<div class="form-group col-xs-12">
				{% if not form.title.vars.valid %}
					<div class="has-error">
						{{ form_widget(form.title) }}
					</div>
				{% else %}
					{{ form_widget(form.title) }}
				{% endif %}

				{{ form_errors(form.title) }}
			</div>

			<div class="form-group col-xs-12">
				{{ form_widget(form.section) }}
				{{ form_errors(form.section) }}
			</div>
			
			<div class="form-group col-xs-12">
				{% if not form.site.vars.valid %}
					<div class="has-error">
						{{ form_widget(form.site) }}
					</div>
				{% else %}
					{{ form_widget(form.site) }}
				{% endif %}

				{{ form_errors(form.site) }}
			</div>

			<div class="form-group col-xs-12 col-sm-6 col-md-6">
				<div class="input-group input-group-sm">
					<span class="input-group-addon">
						<i class="fa fa-map-marker"></i>
					</span>
					{% if not form.location.vars.valid %}
						<div class="has-error">
							{{ form_widget(form.location) }}
						</div>
					{% else %}
						{{ form_widget(form.location) }}
					{% endif %}	
				</div>
				{{ form_errors(form.location) }}
			</div>

			<div class="form-group col-xs-12 col-sm-6 col-md-6">
				<div class="input-group input-group-sm">
					<span class="input-group-addon">
						<i class="fa fa-clock-o"></i>
					</span>
					{% if not form.hoursWeek.vars.valid %}
						<div class="has-error">
							{{ form_widget(form.hoursWeek) }}
						</div>
					{% else %}
						{{ form_widget(form.hoursWeek) }}
					{% endif %}	
					<span class="input-group-addon">hours / week</span>
				</div>
				{{ form_errors(form.hoursWeek) }}
			</div>

		</div>

	</div>
</header>

<main>
	<!-- Job detail -->
	<section>
		<div class="container">

			<header class="section-header">
				<span>Description</span>
				<h2>Détail de l'annonce</h2>
				<p>Description de l'entreprise, de l'emploi proposé, des compétences recherchées...
				</p>
			</header>
			{% if not form.description.vars.valid %}
				<div class="has-error">
					{{ form_widget(form.description) }}
				</div>
			{% else %}
				{{ form_widget(form.description) }}
			{% endif %}

			{{ form_errors(form.description) }}

		</div>
		{# <a href="{{ path('offers_index') }}">back to list</a> #}
	</section>
	<!-- END Job detail -->

	<!-- Submit -->
	<section class="bg-alt">
		<div class="container">
			<header class="section-header">
				<span>Terminé ?</span>
				<h2>Déposer votre offre!</h2>
			</header>

			<p class="text-center">
				{{ form_widget(form.submit, { 'label': 'Créer une annonce' }) }}
			</p>

		</div>
	</section>
	<!-- END Submit -->
</main>

{{ form_end(form) }}
