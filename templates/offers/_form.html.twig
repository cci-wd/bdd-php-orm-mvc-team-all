{{ form_start(form) }}

<header class="page-header">

	<div class="container page-name">
		<h1 class="text-center">{{ form_title }}</h1>
		<p class="lead text-center">{{ form_desc }}</p>
	</div>

	<div class="container">

		<div class="row">
			<div class="form-group col-xs-12">

				{% if not form.title.vars.valid %}
					<div class="has-error">
						{{ form_widget(form.title) }}
					</div>
				{% else %}
					{{ form_widget(form.title) }}
				{% endif %}

				{{ form_errors(form.title) }}

			</div>

			<div class="form-group col-xs-12">
				{{ form_widget(form.sections) }}
			</div>

			<div class="form-group col-xs-12">
				{{ form_widget(form.minDescription) }}
				<div class="invalid-feedback">
					{{ form_errors(form.minDescription) }}
				</div>
			</div>

			<div class="form-group col-xs-12">
				{{ form_widget(form.site) }}
				<div style="color: red">
					{{ form_errors(form.site) }}
				</div>
			</div>

			<div class="form-group col-xs-12 col-sm-6 col-md-6">
				<div class="input-group input-group-sm">
					<span class="input-group-addon">
						<i class="fa fa-map-marker"></i>
					</span>
					{{ form_widget(form.location) }}
				</div>
			</div>

			<div class="form-group col-xs-12 col-sm-6 col-md-6">
				<div class="input-group input-group-sm">
					<span class="input-group-addon">
						<i class="fa fa-clock-o"></i>
					</span>
					{{ form_widget(form.hoursWeek) }}
					<span class="input-group-addon">hours / week</span>
				</div>
			</div>

		</div>

	</div>
</header>

<main>
	<!-- Job detail -->
	<section>
		<div class="container">

			<header class="section-header">
				<span>Description</span>
				<h2>Détail de l'annonce</h2>
				<p>Description de l'entreprise, de l'emploi proposé, des compétences recherchées...
				</p>
			</header>

			{{ form_widget(form.description) }}

		</div>
		{# <a href="{{ path('offers_index') }}">back to list</a> #}
	</section>
	<!-- END Job detail -->

	<!-- Submit -->
	<section class="bg-alt">
		<div class="container">
			<header class="section-header">
				<span>Terminé ?</span>
				<h2>Déposer votre offre!</h2>
			</header>

			<p class="text-center">
				<button class="btn btn-success btn-xl btn-round">{{ button_label }}</button>
			</p>

		</div>
	</section>
	<!-- END Submit -->
</main>

{{ form_end(form) }}
