{{ form_start(form) }}

<header class="page-header">
	<div class="container page-name">
		<h1 class="text-center">Ajouter votre annonce</h1>
		<p class="lead text-center">Create a new vacancy for your company and put it online.</p>
	</div>

	<div class="container">

		<div class="row">
			<div class="form-group col-xs-12">
				{{ form_widget(form.title) }}
			</div>

            <div class="form-group col-xs-12">
                {{ form_widget(form.sections) }}
            </div>

			<div class="form-group col-xs-12">
				{{ form_widget(form.minDescription) }}
			</div>

			<div class="form-group col-xs-12">
				{{ form_widget(form.site) }}
			</div>

			<div class="form-group col-xs-12 col-sm-6 col-md-6">
				<div class="input-group input-group-sm">
					<span class="input-group-addon">
						<i class="fa fa-map-marker"></i>
					</span>
					{{ form_widget(form.location) }}
				</div>
			</div>

			<div class="form-group col-xs-12 col-sm-6 col-md-6">
				<div class="input-group input-group-sm">
					<span class="input-group-addon">
						<i class="fa fa-clock-o"></i>
					</span>
					{{ form_widget(form.hoursWeek) }}
					<span class="input-group-addon">hours / week</span>
				</div>
			</div>

		</div>

		<div class="button-group">
			<div class="action-buttons">
				<div class="upload-button">
					<button class="btn btn-block btn-primary">Choisir une image</button>
					<input id="cover_img_file" type="file">
				</div>
			</div>
			<div class="action-buttons">
				<button class="btn btn-success">{{ button_label|default('Save') }}</button>
			</div>
		</div>

	</div>
</header>

<main>
    <!-- Job detail -->
	<section>
		<div class="container">

			<header class="section-header">
				<span>Description</span>
				<h2>Détail de l'annonce</h2>
				<p>Description de l'entreprise, de l'emploi proposé, des compétences recherchées... </p>
			</header>

			{{ form_widget(form.description) }}

		</div>
		{# <a href="{{ path('offers_index') }}">back to list</a> #}
	</section>
	<!-- END Job detail -->

	<!-- Submit -->
	<section class="bg-alt">
		<div class="container">
			<header class="section-header">
				<span>Terminé ?</span>
				<h2>Déposer votre offre!</h2>
			</header>

			<p class="text-center">
				<button class="btn btn-success btn-xl btn-round">Soumettre une annonce</button>
			</p>

		</div>
	</section>
	<!-- END Submit -->
</main>

{{ form_end(form) }}


