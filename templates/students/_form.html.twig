                <div class="col-xs-12 col-sm-6">
                  <div class="form-group">
                    <input type="text" class="form-control" placeholder="exemple: HTML, CSS, JS ...">
                  </div>
                </div>

                <div class="col-xs-12 col-sm-6">

                  <div class="form-group">
                    <div class="input-group">
                      <input type="text" class="form-control" placeholder="exemple: 30,40,50,100...">
                      <span class="input-group-addon">%</span>
                    </div>
                  </div>

                </div>
              </div>

            </div>
          </div>
        </div>
		

        <div class="col-xs-12 text-center">
          <br>
          <button class="btn btn-primary btn-duplicator">Ajouter qualification</button>
        </div>
		
      </div>

    </div>
  </section>
  <!-- END Skills -->
  <!-- Submit -->
  <section class=" bg-img" style="background-image: url(assets/img/bg-facts.jpg);">
    <div class="container">
      <header class="section-header">
        <span>Are you done?</span>
        <h2>Submit resume</h2>
        <p>Please review your information once more and press the below button to put your resume online.</p>
      </header>

      <p class="text-center">
        {{ form_widget(formStudent.submit, { 'label': 'Valider' }) }}
      </p>
      <a href="{{ path('students_index') }}"> <<< backtolist </a>
	  </div>
	</section><!--ENDSubmit-->
</main><!--ENDMaincontainer-->


