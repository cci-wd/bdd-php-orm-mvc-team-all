    <div class="container">
      <header class="section-header">
        <span>Past positions</span>
        <h2>Work Experience</h2>
      </header>

      <div class="row">

        <div class="col-xs-12">
          <div class="item-block">
            <div class="item-form">

              <button class="btn btn-danger btn-float btn-remove">
                <i class="ti-close"></i>
              </button>

              <div class="row">
