{% extends 'base.html.twig' %}

{% block title %}Businesses{% endblock %}

{% block body %}
    <h1>Businesses</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ business.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ business.name }}</td>
            </tr>
            <tr>
                <th>Slogan</th>
                <td>{{ business.slogan }}</td>
            </tr>
            <tr>
                <th>MinDescription</th>
                <td>{{ business.minDescription }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ business.image }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ business.location }}</td>
            </tr>
            <tr>
                <th>NbEmployees</th>
                <td>{{ business.nbEmployees }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ business.website }}</td>
            </tr>
            <tr>
                <th>DateFoundation</th>
                <td>{{ business.dateFoundation ? business.dateFoundation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>PhoneNumber</th>
                <td>{{ business.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ business.email }}</td>
            </tr>
            <tr>
                <th>Facebook</th>
                <td>{{ business.facebook }}</td>
            </tr>
            <tr>
                <th>Twitter</th>
                <td>{{ business.twitter }}</td>
            </tr>
            <tr>
                <th>Linkedin</th>
                <td>{{ business.linkedin }}</td>
            </tr>
            <tr>
                <th>Youtube</th>
                <td>{{ business.youtube }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('businesses_index') }}">back to list</a>

    <a href="{{ path('businesses_edit', {'id': business.id}) }}">edit</a>

    {{ include('businesses/_delete_form.html.twig') }}
